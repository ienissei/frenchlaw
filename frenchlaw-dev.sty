\newenvironment{option}[1]
	{\par\addvspace{\baselineskip}%
	 \setlength{\parindent}{0pt}%
	 \if@twoside\else\hspace{-.5\marginparwidth}\fi%
	 \lstinline{#1}\@option}
	{\par\addvspace{\baselineskip}}
